<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorHyperTrackGreen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EndTripButtonStyleLive" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_live</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="materialThemeOverlay">@style/EndTripButtonThemeOverlay</item>
    </style>

    <style name="ShareTripButtonStyleLive" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_live</item>
        <item name="android:textSize">16sp</item>
        <item name="materialThemeOverlay">@style/ShareTripButtonThemeOverlay</item>
    </style>

    <style name="EndTripButtonThemeOverlay">
        <item name="colorPrimary">@color/colorRed</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">24dp</item>

    </style>

    <style name="ShareTripButtonThemeOverlay" parent="EndTripButtonThemeOverlay">
        <item name="colorPrimary">@color/colorWhite</item>
    </style>

    <style name="CancelButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_cancel_button</item>
    </style>

    <style name="LightButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_light_button</item>
    </style>

    <style name="TextButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/colorHyperTrackGreen</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="MinorButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/colorTakePicture</item>
        <item name="android:background">@drawable/bg_minor_button</item>
    </style>

    <style name="SmallTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoaderDialog" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:layout_width">232dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DisablableActionButtonStyle" parent="ActionButtonStyle">
        <item name="android:background">@drawable/bg_disableable_button</item>
    </style>

    <style name="FloatingActionButtonSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="backgroundTint">@color/colorFAButtonSecondary</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="fabSize">mini</item>
        <item name="maxImageSize">16dp</item>
        <item name="rippleColor">@null</item>
        <item name="srcCompat">@null</item>
    </style>
    <style name="OfflineViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/no_connection</item>
        <item name="android:background">@drawable/bg_offline</item>
        <item name="android:drawableStart">@drawable/ic_offline</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
